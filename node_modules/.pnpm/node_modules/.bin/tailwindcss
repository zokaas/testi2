#!/bin/sh
basedir=$(dirname "$(echo "$0" | sed -e 's,\\,/,g')")

case `uname` in
    *CYGWIN*) basedir=`cygpath -w "$basedir"`;;
esac

if [ -z "$NODE_PATH" ]; then
  export NODE_PATH="/Users/zoranaopr/Documents/frontend/remix-monorepo/node_modules/.pnpm/@tailwindcss+cli@4.1.7/node_modules/@tailwindcss/cli/dist/node_modules:/Users/zoranaopr/Documents/frontend/remix-monorepo/node_modules/.pnpm/@tailwindcss+cli@4.1.7/node_modules/@tailwindcss/cli/node_modules:/Users/zoranaopr/Documents/frontend/remix-monorepo/node_modules/.pnpm/@tailwindcss+cli@4.1.7/node_modules/@tailwindcss/node_modules:/Users/zoranaopr/Documents/frontend/remix-monorepo/node_modules/.pnpm/@tailwindcss+cli@4.1.7/node_modules:/Users/zoranaopr/Documents/frontend/remix-monorepo/node_modules/.pnpm/node_modules"
else
  export NODE_PATH="/Users/zoranaopr/Documents/frontend/remix-monorepo/node_modules/.pnpm/@tailwindcss+cli@4.1.7/node_modules/@tailwindcss/cli/dist/node_modules:/Users/zoranaopr/Documents/frontend/remix-monorepo/node_modules/.pnpm/@tailwindcss+cli@4.1.7/node_modules/@tailwindcss/cli/node_modules:/Users/zoranaopr/Documents/frontend/remix-monorepo/node_modules/.pnpm/@tailwindcss+cli@4.1.7/node_modules/@tailwindcss/node_modules:/Users/zoranaopr/Documents/frontend/remix-monorepo/node_modules/.pnpm/@tailwindcss+cli@4.1.7/node_modules:/Users/zoranaopr/Documents/frontend/remix-monorepo/node_modules/.pnpm/node_modules:$NODE_PATH"
fi
if [ -x "$basedir/node" ]; then
  exec "$basedir/node"  "$basedir/../@tailwindcss/cli/dist/index.mjs" "$@"
else
  exec node  "$basedir/../@tailwindcss/cli/dist/index.mjs" "$@"
fi
